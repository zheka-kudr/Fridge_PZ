@model IEnumerable<FridgePZ.Models.Itempattern>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.BarCode)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Unit)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Size)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Capacity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LongLife)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CategoryItemPattern)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.BarCode)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Unit)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Size)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Capacity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LongLife)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CategoryItemPattern.Name)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ItemPatternId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ItemPatternId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ItemPatternId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

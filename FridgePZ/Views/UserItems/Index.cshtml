@model IEnumerable<FridgePZ.Models.Item>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ItemId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ExpirationDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsOpen)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ItemPattern.Unit)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ItemPattern.Size)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ItemPattern.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ItemPattern.Capacity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ItemPattern.LongLife)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ItemId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ExpirationDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsOpen)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ItemPattern.Unit)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ItemPattern.Size)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ItemPattern.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ItemPattern.Capacity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ItemPattern.LongLife)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ItemId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ItemId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ItemId">Delete</a>
            </td>
        </tr>
        }
    </tbody>
</table>
